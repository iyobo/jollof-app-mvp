<!DOCTYPE html>
<html>
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <!-- Site Properties -->
    <link rel="icon" type="image/png" href="/static/images/logo.png">
    <title>JollofJS: Get it done</title>
    <link href="/static/semantic/semantic.min.css" rel="stylesheet">
    <link href="/static/css/style.css" rel="stylesheet">
    <style>
        .masthead.segment {
            min-height: 0px;
        }
    </style>
    {% block head %}
    {% endblock %}

</head>
<body>

<!-- Following Menu -->
<div class="ui large top fixed hidden menu">
    <div class="ui container">
        {% include "snippets/nav.nunj" %}

        <div class="right menu">
        {% if not user %}
            <div class="item">
                <a href="/login" class="ui button">Log in</a>
            </div>
            <div class="item">
                <a href="/signup" class="ui primary button">Sign Up</a>
            </div>
        {% else %}
            <div class="item">
                <a href="/dashboard" class="ui button">Dashboard</a>
            </div>
            {% if user.isAdmin %}
                <div class="item">
                    <a href="/admin" class="ui button">Admin</a>
                </div>
            {% endif %}
        {% endif %}

        </div>

    </div>
</div>

<!-- Sidebar Menu -->
<div class="ui vertical inverted sidebar menu">
    {% include "snippets/nav.nunj" %}
    {% if not user %}
        <a href="/login" class="item">Login</a>
        <a href="/signup" class="item">Signup</a>
    {% else %}
        <a href="/dashboard" class="item">Dashboard</a>
        {% if user.isAdmin %}
            <a href="/admin" class="item">Admin</a>
        {% endif %}
    {% endif %}
</div>

<div class="ui inverted vertical masthead center aligned segment">

    <div class="ui container">
        <div class="ui large secondary inverted pointing menu">
            <a class="toc item">
                <i class="sidebar icon"></i>
            </a>
            {% include "snippets/nav.nunj" %}
            <div class="right item">
                {% if not user %}
                <a href="/login" class="ui inverted button">Log in</a>
                <a href="/signup" class="ui inverted button">Sign Up</a>
                {% else %}
                <a href="/dashboard" class="ui inverted button">Dashboard</a>
                {% if user.isAdmin %}
                <a href="/admin" class="ui inverted button">Admin</a>
                {% endif %}
                {% endif %}
            </div>
        </div>
    </div>

</div>

<!-- Page Contents -->
<div class="pusher">

    {% block content %}
    {% endblock %}

    {% include "snippets/footer.nunj" %}
</div>

</body>
<script src="/static/js/jquery-3.1.1.min.js" type="text/javascript"></script>
<script src="/static/semantic/semantic.min.js" type="text/javascript"></script>
<script>
    $(document)
        .ready(function () {

            // fix menu when passed
            $('.masthead')
                .visibility({
                    once: false,
                    onBottomPassed: function () {
                        $('.fixed.menu').transition('fade in');
                    },
                    onBottomPassedReverse: function () {
                        $('.fixed.menu').transition('fade out');
                    }
                })
            ;

            // create sidebar and attach to menu open
            $('.ui.sidebar')
                .sidebar('attach events', '.toc.item')
            ;

        })
    ;
</script>
{% block bottom %}
{% endblock %}

</html>
